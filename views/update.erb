<div class="card" style="background-color: #333; border-color: #333;">
  <div class="card-block">
    <h2><strong><%= @word.name %></strong></h2><br>
    <h3><%= @word.definition %></h3><br>
      <p><em><%=@word.extra%></em></p>
    <p><em><%=@word.example%></em></p>
  </div>
</div>


<div class="row">
  <form class="" action="/update/<%= @word.id %>" method="post">
    <label>Add A definition</label>
    <input type="text" name="definition" value="<%= @word.definition %>">
    <label>Example</label>
    <input type="text" name="example" value="<%= @word.example %>">
    <button class="button" type="submit" name="button">Confirm</button>
  </form>

  <form class="button" action="/" method="get">
    <button type="submit" name="button">Home</button>
  </form>

</div>
